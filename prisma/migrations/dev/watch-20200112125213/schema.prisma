generator photon {
    provider = "photonjs"
}

datasource db {
    provider = "postgresql"
    url = "***"
}

model Organization {
    id   String @default(cuid()) @id
    name String
}

model Environment {
    id           String       @default(cuid()) @id
    organization Organization
    name         String
}

model Switch {
    id           String       @default(cuid()) @id
    type         SwitchType
    environment  Environment
    organization Organization
    createdAt    DateTime     @default(now())
    updatedAt    DateTime     @updatedAt

}

enum SwitchType {
    Boolean
    Multi
}